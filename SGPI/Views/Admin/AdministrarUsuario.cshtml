@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "Administrar Usuario";
}



<h2>@ViewBag.mensaje</h2>

<head>
    <style>
        .header {
            text-align: center;
            height: 700px;
            padding: 12px;
            background-image: url("https://img.freepik.com/vector-gratis/diseno-fondo-blanco-estilo-perspectiva-3d-forma-hexagonal_1017-27558.jpg?w=2000")
        }
      </style>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  
</head>
<div class="header">
    <br>
    <br>
    <br>
    <h1 class="title">Administrar usuario</h1>
<style>
        body {
          background-image: url('https://static.vecteezy.com/system/resources/previews/001/176/927/original/blue-and-white-abstract-background-vector.jpg');
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: 100% 100%;
        }
   </style>

<form method="post">
    <div class="container-fluid">
        <br>
    <br>
    <div style="text-align:right"> <a href="https://localhost:44384/">Cerrar Sesion</a></div>
     <br>
    <br>
    <br>
    <br>
     <br>
    
	<div class="barra-busqueda">
		
		<input asp-for="Documento" type="text" placeholder="Documento aquí...">
        <button type="submit" class="btn btn-outline-primary btn-sm">Buscar</button>
	</div>
    
   
    <br>
    <br>
	<div class="bltbl">
        <table>
            
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Rol)</th>
                <th>@Html.DisplayNameFor(model => model.Genero)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Documento)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.IdPrograma)</th>

            </tr>

            <tr>
                <td class="td nombre-usuario">@Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                <td class="td apellido-usuario">@Html.DisplayFor(modelItem => modelItem.Apellido)</td>
                <td class="td rol-usuario">@Html.DisplayFor(modelItem => modelItem.Rol)</td>
                <td class="td genero-usuario">@Html.DisplayFor(modelItem => modelItem.Genero)</td>
                <td class="td email-usuario">@Html.DisplayFor(modelItem => modelItem.Email)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Documento)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Telefono)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.IdPrograma)</td>


                <td>
                    <button type="button" class="btn btn-outline-primary"> @Html.ActionLink("Editar", "Edit", new { IdUsuario = Model.IdUsuario })</button>

                </td>
                <td>

                    <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Eliminar", "Delete", new { IdUsuario = Model.IdUsuario })</button>
                </td>
            </tr>






            
        </table>
         </div>
	</div>
    </form>
     <br>
    
    <br>
    <br>
    <a href="https://localhost:44384/Admin/MenuAdmin" <button type="button" class="btn  btn-outline-secondary float-right">Volver</button></a>
    </div>

