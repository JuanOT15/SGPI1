         <div id="login">
       <h1 class="text-center text-info">Sistema de gestión de posgrados</h1>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Inicio de sesión</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Usuario:</label><br>
                                <input type="text" name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>
                                <input type="text" name="password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <br>
                                <a href="https://localhost:44384/Admin/CrearUsuario" <button type="button" class="btn btn-outline-primary">Ingresar</button></a>
                            </div>
                            <div id="register-link" class="text-right">
                                <br>
                                <br>
                                <a href="https://localhost:44384/Home/Privacy">¿Olvidó su Contraseña?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

                     

