@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "Consultas";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .header {
            text-align: center;
            height: 800px;
            padding: 12px;
            background-image: url("https://img.freepik.com/vector-gratis/diseno-fondo-blanco-estilo-perspectiva-3d-forma-hexagonal_1017-27558.jpg?w=2000")
        }
    </style>
</head>
<body>
     <style>
        body {
          background-image: url('https://static.vecteezy.com/system/resources/previews/001/176/927/original/blue-and-white-abstract-background-vector.jpg');
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: 100% 100%;
        }
   </style>
    <div class="header">
        <br>
        <h1><center>Consultas</h1></center>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <form method="post">
            <div class="barra-busqueda">
                <label asp-for="Documento">Buscar documento</label>
                <input asp-for="Documento" type="text" placeholder="Ingrese el documento">
                <button type="submit" class="btn btn-secondary">Buscar</button>
            </div>

            <br />
            <br />
            <div class="bltbl">
                <table style="width: 100%">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Documento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rol)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPrograma)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>



                    </tr>
                    <tr>
                        <td class="td nombre-usuario">@Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                        <td class="td apellido-usuario">@Html.DisplayFor(modelItem => modelItem.Apellido)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Documento)</td>
                        <td class="td rol-usuario">@Html.DisplayFor(modelItem => modelItem.Rol)</td>
                        <td class="td genero-usuario">@Html.DisplayFor(modelItem => modelItem.Genero)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.IdPrograma)</td>
                        <td class="td email-usuario">@Html.DisplayFor(modelItem => modelItem.Email)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Telefono)</td>
                    </tr>
                </table>
                <br />
                <br /><br /><br /><br /> <br /> <br /> <br /> <br /> <br /> <br />
                <br />
                <a href="https://localhost:44384/Coordinador/MenuCoordinador" <button type="button" class="btn  btn-outline-secondary float-right">Volver</button></a>
            </div>
        </form>
    </div>

</body>

</html>

